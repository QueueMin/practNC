#include <iostream>
#include <curses.h>
#pragma comment(lib,"pdcurses.lib")
using namespace std;

int main() {
    int row, col;
    cin >> row >> col;
    initscr();
    resize_term(row, col);
    mvprintw(3, 4, "C++ programming with curses");
    refresh();
    getch();
    endwin();
    return 0;
}